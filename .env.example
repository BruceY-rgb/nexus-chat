# =====================================================
# Environment Variables for Slack-like Chat Tool
# =====================================================

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/slack_chat?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_USER=username
DB_PASSWORD=password
DB_NAME=slack_chat

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# OSS Configuration
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=your-oss-access-key-id
OSS_ACCESS_KEY_SECRET=your-oss-access-key-secret
OSS_BUCKET=your-oss-bucket-name
OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com
OSS_CUSTOM_DOMAIN=your-custom-domain.com

# Application Configuration
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WebSocket Configuration
WEBSOCKET_PORT=3001

# Email Configuration (Choose ONE method below)

# Method 1: Resend (Recommended - Simple & Fast)
# Get your API key from: https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM="Slack聊天应用 <noreply@your-domain.com>"
EMAIL_REPLY_TO=support@your-domain.com
APP_NAME=Slack聊天应用

# Method 2: SMTP (Alternative)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-email-password
# FROM_EMAIL=noreply@yourapp.com
# FROM_NAME=Your App Name

# Redis Configuration (Optional - for session storage)
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_FILE_UPLOAD=true
ENABLE_SEARCH=true
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # 100 requests per window

# Logging
LOG_LEVEL=info
LOG_FORMAT=dev

# =====================================================
# Slack API Configuration (For Data Import)
# =====================================================

# Slack User Token (xoxp-xxx) - Get from Slack App settings
# Required scopes: channels:read, channels:history, users:read, conversations:read
SLACK_USER_TOKEN=your-slack-user-token

# =====================================================
# Seeding Configuration (Optional)
# =====================================================

# 生产环境可选：启用详细日志（默认在生产环境关闭）
# SEED_VERBOSE=true

# Dokploy 环境标识（可选）
# DOKPLOY=true

# 自动 seeding 标志（可选）
# AUTO_SEED=true
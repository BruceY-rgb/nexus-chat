{
  "name": "slack-like-chat",
  "version": "1.0.0",
  "description": "A Slack-like chat application with real-time messaging",
  "main": "electron/main.js",
  "scripts": {
    "dev": "tsx server.ts",
    "build": "next build && electron-builder",
    "build:next": "next build",
    "start": "NODE_ENV=production tsx server.ts",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "db:migrate": "bash scripts/migrate.sh",
    "db:reset": "bash scripts/reset-db.sh",
    "db:seed": "tsx scripts/seed.ts",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:view": "prisma migrate status",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3001 && electron .\"",
    "electron:build": "npm run build:next && electron-builder",
    "dist": "npm run build:next && electron-builder --publish=never",
    "pack": "npm run build:next && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "chat",
    "slack",
    "real-time",
    "websocket",
    "postgres",
    "prisma",
    "react",
    "nextjs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@tanstack/react-query": "^5.0.0",
    "ali-oss": "^6.23.0",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.292.0",
    "next": "^14.0.0",
    "next-auth": "^4.24.13",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.0",
    "resend": "^6.8.0",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0",
    "sonner": "^2.0.7",
    "zod": "^3.22.4",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/ali-oss": "^6.23.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "electron": "^40.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "mock-aws-s3": "^4.0.2",
    "nock": "^14.0.10",
    "postcss": "^8.4.0",
    "prisma": "^5.7.0",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

# =====================================================
# Mock Environment Variables for Slack-like Chat Tool
# This file contains sample/mock configuration values
# for development and testing purposes
# =====================================================

# Database Configuration (Mock)
DATABASE_URL="postgresql://mock_user:mock_password@localhost:5432/slack_chat_mock?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_USER=mock_user
DB_PASSWORD=mock_password
DB_NAME=slack_chat_mock

# JWT Configuration (Mock)
JWT_SECRET=mock-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=7d

# Session Configuration (Mock)
SESSION_SECRET=mock-session-secret-key-for-testing

# OSS Configuration (Mock)
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=mock_oss_access_key_id
OSS_ACCESS_KEY_SECRET=mock_oss_access_key_secret
OSS_BUCKET=mock-oss-bucket
OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com
OSS_CUSTOM_DOMAIN=mock.example.com

# Application Configuration
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WebSocket Configuration
WEBSOCKET_PORT=3001

# Email Configuration (Mock - using Resend)
RESEND_API_KEY=re_mock_resend_api_key_for_testing
EMAIL_FROM="Mock Slack App <noreply@mock-domain.com>"
EMAIL_REPLY_TO=support@mock-domain.com
APP_NAME=Mock Slack聊天应用

# Feature Flags (Mock)
ENABLE_FILE_UPLOAD=true
ENABLE_SEARCH=true
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# File Upload Limits (Mock)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain

# Rate Limiting (Mock)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging (Mock)
LOG_LEVEL=info
LOG_FORMAT=dev
